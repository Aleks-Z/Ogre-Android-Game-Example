<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ogre3d.gles2Sample"
    android:versionCode="2"
    android:versionName="2.0" 
	android:installLocation="auto">

    <uses-sdk android:minSdkVersion="9" />
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" /> -->

    <!-- This .apk has no Java code itself, so set hasCode to false. -->
    <application android:label="OgreGLES2Sample" android:icon="@drawable/ic_launcher" android:hasCode="false">
        <activity android:name="android.app.NativeActivity"
                  android:label="OgreGLES2Sample"
                  android:configChanges="orientation|keyboardHidden"
	
		  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <!-- Tell NativeActivity the name of or .so -->
            <meta-data android:name="android.app.lib_name" android:value="OgreGLES2Sample" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
    </application>

</manifest>
